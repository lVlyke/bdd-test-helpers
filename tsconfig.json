{
    "compilerOptions": {
        "noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "stripInternal": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "types": []
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "typeRoots": [
        "node_modules/@types"
    ],
    "atom": {
        "rewriteTsConfig": false
    }
}